 
// Assignment_ 4  Task 3  
public class Triangle{
  public String type;
  public int a;
  public int b; 
  public int c;
  public int perimeter;
  public Triangle(int a, int b, int c){
    this.a=a;
    this.b=b;
    this.c=c;
    perimeter=a+b+c;
    if(a==b && b==c){
      type="Equilateral";
    }
    else if(a==b || b==c || b==a){
      type="Isosceles";
    }
    else{
      type="Scalene";
    }
  }
  public void triangleDetails(){
    System.out.printf("Three sides of the triangle are: %d, %d,%d\n",a,b,c);
    System.out.println("Perimeter: "+perimeter);
  }
  
  
  public String printTriangleType(){
    String ans="";
    if(type=="Equilateral"){
      ans= "This is an Equilateral Triangle.";
    }
    else if (type=="Isosceles"){
      ans= "This is an Isosceles Triangle.";
    }
    else{
      ans= "This is a Scalene Triangle.";
    }
    return ans;
  }
  public void compareTriangles(Triangle nm){
    if (this!=nm && this.a==nm.a && this.b==nm.b && this.c==nm.c){
      System.out.println("Addresses are different but the sides of the triangles are equal.");
    }
    else if (this==nm){
      System.out.println("These two triangle objects have the same address.");
    }
    else if (this.perimeter==nm.perimeter){
      System.out.println("Only the perimeter of both triangles is equal.");
    }
    else{
      System.out.println("Addresses, length of the sides and perimeter all are different.");
    }
  }
}

