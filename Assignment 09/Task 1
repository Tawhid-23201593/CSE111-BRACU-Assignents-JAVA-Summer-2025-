// Task 1

public class Manager extends Employee{
  public double bonus;
  public double finalSalary;
  
  public Manager(String nm, double base, int hour, double bo){
    super(nm, base, hour);
    bonus=bo;
  }
  public void calculateSalary(){
    double a=getBaseSalary();
    finalSalary=a*(bonus/100.0);
  }
  public void displayInfo(){
    super.displayInfo();
    System.out.println("Bonus: "+bonus+" %");
    System.out.println("finalSalary: $"+finalSalary);
  }
 public void requestIncrement(double am){
    if(getHoursWorked()>100){
       double salary = getBaseSalary()+am;
       setBaseSalary(salary);
       System.out.println("$"+am+" Increment approved.");
    }
    else if (getHoursWorked()>80){
       double salary = getBaseSalary()+am/2;
       setBaseSalary(salary);
       System.out.println("$"+(am/2)+" Increment approved.");
    }
    else{
      System.out.println("Increment denied.");
    }
    }
  }
